<ul class="comments-list">
  {{#each @comments as |comment|}}
    <li
      class="flex justify-between items-center px-3 py-1.5 rounded shadow-sm mb-3 bg-white dark:bg-gray-800"
    >
      <p class="italic text-gray-500 dark:text-gray-300">
        {{comment.text}}
      </p>
      <button
        type="button"
        class="cursor-pointer text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm p-2.5 me-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"
        {{on "click" (fn @deleteComment comment.id)}}
      >
        <svg
          class="w-4 h-4 inherit dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="14"
          height="14"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"
          />
        </svg>
      </button>
    </li>
  {{/each}}
</ul>